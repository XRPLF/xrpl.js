{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "pretty": true,
    "target": "ES2022",
    "outDir": "./dist/npm",
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": false,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}
