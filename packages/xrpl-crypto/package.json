{
  "name": "@xrpl/crypto",
  "version": "1.0.0",
  "description": "Isomorphic crypto hashes/utils for XRPL",
  "scripts": {
    "build": "tsc -b",
    "test": "jest --verbose false --silent=false ./test/*.test.ts",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts",
    "prepublish": "npm run lint && npm test"
  },
  "files": [
    "dist/*",
    "sha256/*",
    "sha512/*",
    "ripemd160/*",
    "utils/*"
  ],
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@noble/hashes": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.38"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:XRPLF/xrpl.js.git"
  },
  "license": "ISC",
  "prettier": "@xrplf/prettier-config",
  "engines": {
    "node": ">=16.0.0"
  }
}
